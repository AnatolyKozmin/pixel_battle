# Пример файла для создания секретов
# Используйте: kubectl create secret generic pixel-battle-secrets --from-file=secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: pixel-battle-secrets
type: Opaque
stringData:
  database-url: "postgresql+asyncpg://user:password@postgres-host:5432/pixel_battle"
  telegram-bot-token: "your_telegram_bot_token"
  app-secret-key: "your_secret_key_here"
